<div class="col-md-12">
  <% if current_user && current_user.is_admin %>
  <div class="group">
    <%= link_to("Edit", edit_home_path(@home), class: "btn btn-primary pull-right")%>
  </div>
  <% end %>
  <h2><%= @home.name %></h2>
  <p><%= @home.address %></p>

  <table class="table table-hover">
    <thead>
      <tr>
        <td>茶会时间 </td>
      </tr>
    </thead>
    <tbody>
      <% @home.eventdates.each do |ed| %>
        <tr>
          <td><%= ed.name %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
